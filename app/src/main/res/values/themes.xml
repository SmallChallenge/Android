<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stampy" parent="Theme.Material3.Dark.NoActionBar">
        <!-- 상태바 투명하게 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 시스템 네비게이션 바 색상 설정 -->
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- 기본 색상 설정 -->
        <item name="colorPrimary">#C8FF00</item>
        <item name="colorPrimaryVariant">#B4E600</item>
        <item name="colorOnPrimary">#171717</item>
        <item name="colorSecondary">#C8FF00</item>
        <item name="android:windowBackground">#171717</item>
    </style>

    <style name="Theme.Stampy" parent="Base.Theme.Stampy" />
</resources>