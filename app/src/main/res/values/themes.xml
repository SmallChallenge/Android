<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Stampy" parent="Theme.Material3.Dark.NoActionBar">
        <!-- 상태바 투명 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 시스템 네비게이션 바 색상 설정 -->
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- 색상 -->
        <item name="colorPrimary">@color/neon_primary</item>
        <item name="colorOnPrimary">@color/gray_primary</item>
        <item name="android:windowBackground">@color/gray_primary</item>
    </style>

    <!-- FAB 둥근 사각형 모양 -->
    <style name="ShapeAppearance.App.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">34dp</item>
    </style>

    <!-- 네비게이션 인디케이터 제거 -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>