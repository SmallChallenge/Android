<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/gray_700"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <!-- 텍스트 -->
    <TextView
        android:id="@+id/tv_banner_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="게스트는 기록을 최대 20개까지 남길 수 있습니다."
        android:textColor="@color/gray_200"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_close_banner" />

    <!-- 닫기 버튼 -->
    <ImageView
        android:id="@+id/btn_close_banner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="배너 닫기"
        app:layout_constraintTop_toTopOf="@id/tv_banner_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_banner_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 프로그레스 바 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:progressDrawable="@drawable/progress_photo_limit"
        android:max="20"
        android:progress="18"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_banner_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_photo_count" />

    <!-- 현재 사진 수 -->
    <TextView
        android:id="@+id/tv_photo_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18/20"
        android:textColor="@color/gray_500"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/progress_bar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>