<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_primary"
    android:paddingBottom="10dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 상단 유저 정보 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_my_profile"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 닉네임 -->
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="홍길동"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.App.Subtitle1"
            android:fontFamily="@font/pretendard_semibold"
            app:fontFamily="@font/pretendard_semibold"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintEnd_toStartOf="@id/btn_menu" />

        <!-- 메뉴 버튼 (점 3개) - 터치 영역 44dp -->
        <FrameLayout
            android:id="@+id/btn_menu"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_more_vertical"
                app:tint="@color/text_primary" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 이미지 컨테이너 (팝오버를 위한 상위 레이아웃) -->
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/user_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <!-- 이미지 (1:1 정사각형, 라운드) -->
        <ImageView
            android:id="@+id/iv_feed_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_photo_rounded"
            android:clipToOutline="true" />

        <!-- 팝오버 메뉴 (이미지 위에 겹침) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/popover_menu"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-12dp"
            android:visibility="gone"
            android:translationZ="50dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/gray_600">

            <!-- 신고하기 -->
            <LinearLayout
                android:id="@+id/menu_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="24dp"
                    android:text="신고하기"
                    android:textSize="16sp"
                    android:textColor="@color/gray_300"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_report"
                    app:tint="@color/gray_300" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- 하단 액션 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/action_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 좋아요 버튼 (터치 영역 44dp) -->
        <FrameLayout
            android:id="@+id/btn_like"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- 좋아요 수 -->
        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.App.Subtitle2"
            app:fontFamily="@font/pretendard_semibold"
            android:layout_marginStart="-4dp"
            android:paddingBottom="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_like" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>