<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="false">

    <!-- 상단 바 (60dp 고정) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/background_primary"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_stampy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Stampy"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_semibold"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 카테고리 탭 -->
    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 전체 -->
            <LinearLayout
                android:id="@+id/category_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_category_all"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/category_circle_selected"
                    android:padding="14dp"
                    app:tint="@color/gray_primary" />

                <TextView
                    android:id="@+id/tv_category_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textColor="@color/gray_50"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 공부 -->
            <LinearLayout
                android:id="@+id/category_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_category_study"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/category_circle_unselected"
                    android:padding="14dp"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_category_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공부"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 운동 -->
            <LinearLayout
                android:id="@+id/category_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_category_exercise"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:background="@drawable/category_circle_unselected"
                    android:padding="14dp"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_category_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 음식 -->
            <LinearLayout
                android:id="@+id/category_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_category_food"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:background="@drawable/category_circle_unselected"
                    android:padding="14dp"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_category_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음식"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- 기타 -->
            <LinearLayout
                android:id="@+id/category_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.4"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_category_etc"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:background="@drawable/category_circle_unselected"
                    android:padding="14dp"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/tv_category_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textColor="@color/gray_500"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 사진 그리드 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/category_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 빈 상태 메시지 -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 저장된 사진이 없습니다\n+ 버튼을 눌러 사진을 추가해보세요"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_scroll" />

</androidx.constraintlayout.widget.ConstraintLayout>