<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="false">

    <!-- 상단 바 (60dp 고정) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/background_primary"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Stampy 로고 -->
        <ImageView
            android:id="@+id/iv_stampy_logo"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:src="@drawable/stampic"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 마이페이지 버튼 -->
        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NestedScrollView로 전체 감싸기 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 카테고리 탭 -->
            <HorizontalScrollView
                android:id="@+id/category_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 전체 -->
                    <LinearLayout
                        android:id="@+id/category_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_category_all"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_category_all"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_category_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전체"
                            android:textColor="@color/gray_50"
                            android:textAppearance="@style/TextAppearance.App.Button2.Large"
                            app:fontFamily="@font/pretendard_semibold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 공부 -->
                    <LinearLayout
                        android:id="@+id/category_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:alpha="0.4"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_category_study"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_category_study"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_category_study"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공부"
                            android:textColor="@color/gray_500"
                            android:textAppearance="@style/TextAppearance.App.Button2.Large"
                            app:fontFamily="@font/pretendard_semibold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 운동 -->
                    <LinearLayout
                        android:id="@+id/category_exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:alpha="0.4"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_category_exercise"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_category_exercise"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_category_exercise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운동"
                            android:textColor="@color/gray_500"
                            android:textAppearance="@style/TextAppearance.App.Button2.Large"
                            app:fontFamily="@font/pretendard_semibold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 음식 -->
                    <LinearLayout
                        android:id="@+id/category_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:alpha="0.4"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_category_food"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_category_food"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_category_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="음식"
                            android:textColor="@color/gray_500"
                            android:textAppearance="@style/TextAppearance.App.Button2.Large"
                            app:fontFamily="@font/pretendard_semibold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- 기타 -->
                    <LinearLayout
                        android:id="@+id/category_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:alpha="0.4"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iv_category_etc"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_category_etc"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/tv_category_etc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기타"
                            android:textColor="@color/gray_500"
                            android:textAppearance="@style/TextAppearance.App.Button2.Large"
                            app:fontFamily="@font/pretendard_semibold"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- 18장 도달 시 배너 -->
            <include
                android:id="@+id/banner_photo_limit"
                layout="@layout/banner_photo_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <!-- 사진 그리드 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:padding="0dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 빈 상태 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_state_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 빈 상태를 묶는 그룹 -->
        <LinearLayout
            android:id="@+id/empty_state_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 빈 화면 일러스트 캐릭터 -->
            <ImageView
                android:id="@+id/iv_empty_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_empty_character"
                android:contentDescription="빈 상태 캐릭터" />

            <!-- 빈 상태 메시지 -->
            <TextView
                android:id="@+id/tv_empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 남긴 기록이 없어요.\n+버튼을 눌러 기록을 시작해보세요!"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_regular"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>