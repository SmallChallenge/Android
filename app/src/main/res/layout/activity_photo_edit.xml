<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- 상단바 -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar_with_back"
        android:layout_width="0dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 편집 사진 (1:1 정사각형, 상단바 아래 40dp) -->
    <FrameLayout
        android:id="@+id/photo_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <!-- 배경 사진 -->
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="편집할 사진" />

        <!-- 템플릿 오버레이 (선택된 템플릿) -->
        <TextView
            android:id="@+id/tv_template_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/gray_50"
            android:textSize="24sp"
            android:fontFamily="@font/pretendard_regular"
            android:visibility="gone"
            android:text="템플릿" />

    </FrameLayout>

    <!-- 카테고리 + 로고 토글 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_logo_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/photo_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 카테고리 스크롤 -->
        <HorizontalScrollView
            android:id="@+id/category_scroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/logo_area">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="16dp">

                <!-- 전체 -->
                <TextView
                    android:id="@+id/btn_category_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textAppearance="@style/TextAppearance.App.Button2.Large"
                    android:textColor="@color/gray_50"
                    android:background="@drawable/bg_category_selected"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 공부 -->
                <TextView
                    android:id="@+id/btn_category_study"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공부"
                    android:textAppearance="@style/TextAppearance.App.Button2.Large"
                    android:textColor="@color/gray_500"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 운동 -->
                <TextView
                    android:id="@+id/btn_category_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"
                    android:textAppearance="@style/TextAppearance.App.Button2.Large"
                    android:textColor="@color/gray_500"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 음식 -->
                <TextView
                    android:id="@+id/btn_category_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음식"
                    android:textAppearance="@style/TextAppearance.App.Button2.Large"
                    android:textColor="@color/gray_500"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 기타 -->
                <TextView
                    android:id="@+id/btn_category_etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textAppearance="@style/TextAppearance.App.Button2.Large"
                    android:textColor="@color/gray_500"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Logo 토글 영역 -->
        <LinearLayout
            android:id="@+id/logo_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_logo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo"
                android:textColor="@color/gray_300"
                android:textSize="14sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginEnd="6dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_logo"
                android:layout_width="40dp"
                android:layout_height="17.5dp"
                android:checked="true"
                android:thumb="@drawable/thumb_logo_switch"
                android:track="@drawable/track_logo_switch" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 템플릿 목록 -->
    <HorizontalScrollView
        android:id="@+id/template_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/category_logo_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/template_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- 템플릿 1 -->
            <FrameLayout
                android:id="@+id/template_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_template_item"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T1"
                    android:textColor="@color/gray_50"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold" />
            </FrameLayout>

            <!-- 템플릿 2 -->
            <FrameLayout
                android:id="@+id/template_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_template_item"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T2"
                    android:textColor="@color/gray_50"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold" />
            </FrameLayout>

            <!-- 템플릿 3 -->
            <FrameLayout
                android:id="@+id/template_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_template_item"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T3"
                    android:textColor="@color/gray_50"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold" />
            </FrameLayout>

            <!-- 템플릿 4 -->
            <FrameLayout
                android:id="@+id/template_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_template_item"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="T4"
                    android:textColor="@color/gray_50"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold" />
            </FrameLayout>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>