<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- 뒤로가기 버튼 (좌측 상단) -->
    <FrameLayout
        android:id="@+id/btn_back_touch_area"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로가기" />
    </FrameLayout>

    <!-- 닫기 버튼 (우측 상단) -->
    <FrameLayout
        android:id="@+id/btn_close_touch_area"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:contentDescription="닫기" />
    </FrameLayout>

    <!-- 메인 컨텐츠 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- "닉네임 입력" 텍스트 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="281dp"
            android:layout_height="48dp"
            android:text="닉네임 입력"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:fontFamily="@font/pretendard_semibold"
            app:fontFamily="@font/pretendard_semibold"
            android:gravity="center"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STAMPIC에서 사용할 닉네임을 입력해주세요."
            android:textAppearance="@style/TextAppearance.App.Body1"
            android:textColor="@color/gray_400"
            android:gravity="center"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 닉네임 입력 영역 (EditText + 밑줄을 하나로) -->
        <FrameLayout
            android:id="@+id/layout_input"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 닉네임 입력 필드 -->
            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAppearance="@style/TextAppearance.App.H2"
                app:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:maxLines="1"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor_white"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- 하단 밑줄 (EditText 아래 12dp) -->
            <View
                android:id="@+id/view_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_700"
                android:layout_gravity="bottom"
                android:layout_marginTop="48dp" />

        </FrameLayout>

        <!-- 에러 메시지 (밑줄 아래) -->
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="#FF2334"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layout_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 완료 버튼 (하단 40dp) -->
    <include
        layout="@layout/button_large"
        android:id="@+id/btn_complete"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>