<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="20dp">

    <!-- 전체 동의하고 시작 (체크박스 + 텍스트) -->
    <LinearLayout
        android:id="@+id/layout_all_agree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 전체 동의 체크박스 -->
        <ImageView
            android:id="@+id/iv_check_all"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checkbox_unchecked"
            android:contentDescription="전체 동의" />

        <!-- 전체 동의하고 시작 텍스트 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전체 동의하고 시작"
            android:textAppearance="@style/TextAppearance.App.Subtitle2"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- 10dp 공간 -->
    <View
        android:id="@+id/space_1"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_all_agree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이용약관 (필수) -->
    <LinearLayout
        android:id="@+id/layout_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/space_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 체크박스 영역 (클릭 가능) -->
        <LinearLayout
            android:id="@+id/btn_check_terms"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- 이용약관 체크박스 -->
            <ImageView
                android:id="@+id/iv_check_terms"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_checkbox_unchecked"
                android:contentDescription="이용약관 동의" />

            <!-- 이용약관 (필수) 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 (필수)"
                android:textAppearance="@style/TextAppearance.App.Body1"
                android:textColor="@color/text_primary"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 화살표 버튼 (터치 영역 44dp) -->
        <FrameLayout
            android:id="@+id/btn_view_terms"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary"
                android:contentDescription="이용약관 보기" />
        </FrameLayout>
    </LinearLayout>

    <!-- 개인정보 수집 및 이용 (필수) -->
    <LinearLayout
        android:id="@+id/layout_privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/layout_terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 체크박스 영역 (클릭 가능) -->
        <LinearLayout
            android:id="@+id/btn_check_privacy"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- 개인정보 체크박스 -->
            <ImageView
                android:id="@+id/iv_check_privacy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_checkbox_unchecked"
                android:contentDescription="개인정보 동의" />

            <!-- 개인정보 수집 및 이용 (필수) 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 수집 및 이용 (필수)"
                android:textAppearance="@style/TextAppearance.App.Body1"
                android:textColor="@color/text_primary"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 화살표 버튼 (터치 영역 44dp) -->
        <FrameLayout
            android:id="@+id/btn_view_privacy"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_right"
                app:tint="@color/text_secondary"
                android:contentDescription="개인정보처리방침 보기" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>