<?xml version="1.0" encoding="utf-8"?>
<!-- Moody 1 템플릿 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- 날짜 표시 (중앙 상단, 상단 여백 24px) -->
    <!-- 형식: E, d MMM (예: WED, 22 SEPT) -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:fontFamily="@font/movesans"
        app:fontFamily="@font/movesans"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.0"
        android:letterSpacing="-0.02"
        android:textAllCaps="true"
        android:shadowColor="#73000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        tools:text="WED, 22 SEPT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 시간 표시 (날짜 아래 4px) -->
    <!-- 형식: a hh:mm (Locale: US, 예: PM 12:53) -->
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:fontFamily="@font/movesans"
        app:fontFamily="@font/movesans"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="1.0"
        android:letterSpacing="-0.02"
        android:textAllCaps="true"
        android:shadowColor="#73000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        tools:text="PM 12:53"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Stampic 로고 이미지 (중앙 하단, 아래 여백 16px) -->
    <!-- 하단 16px (Blur 5 설정이 있어서 5dp 뺀 11dp임) -->
    <ImageView
        android:id="@+id/iv_stampic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:src="@drawable/stampic_tem_shadow"
        android:contentDescription="Stampic Logo"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>