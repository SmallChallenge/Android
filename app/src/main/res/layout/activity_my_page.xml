    <!-- 스크롤 가능한 콘텐츠 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 라인 (높이 60) -->
            <LinearLayout
                android:id="@+id/layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:layout_marginTop="24dp">

                <!-- 프로필 아이콘 배경 (60x60, 라운드 20) -->
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_my_profile">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <!-- 닉네임 + 제한 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- 닉네임 -->
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게스트"
                        android:textColor="@color/gray_50"
                        android:textSize="20sp"
                        android:textAppearance="@style/TextAppearance.App.H3"
                        app:fontFamily="@font/pretendard_semibold" />

                    <!-- 기록 일부 제한 (게스트만) -->
                    <TextView
                        android:id="@+id/tv_guest_restriction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기록 일부 제한"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:layout_marginTop="4dp"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- 화살표 (로그인 시만 표시) -->
                <ImageView
                    android:id="@+id/iv_arrow_info"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_300"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 로그인 유도 공간 (비회원만, 높이 160) -->
            <LinearLayout
                android:id="@+id/layout_login_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="32dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_login_promotion"
                android:visibility="visible">

                <!-- 로그인하고 기록을 계속 이어가세요 ✨ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인하고 기록을 계속 이어가세요 ✨"
                    android:textColor="@color/gray_300"
                    android:textSize="16sp"
                    android:textAppearance="@style/TextAppearance.App.Subtitle1"
                    app:fontFamily="@font/pretendard_semibold"
                    android:layout_marginStart="24dp" />

                <!-- ✔️ 자동 백업 및 무제한 기록 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ 자동 백업 및 무제한 기록"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:fontFamily="@font/pretendard_semibold"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp" />

                <!-- ✔️ 기록 전체공개 설정 가능 -->
                <TextView
                    android:id="@+id/tv_public_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ 기록 전체공개 설정 가능"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp" />

                <!-- 경고: 게스트 기록은 이후에도 백업 공개가 불가해요 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_warning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게스트 기록은 이후에도 백업 공개가 불가해요."
                        android:textColor="@color/gray_500"
                        android:textAppearance="@style/TextAppearance.App.Caption"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- 로그인 버튼 (비회원만) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="로그인"
                android:textColor="@color/gray_primary"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.App.Button.Large"
                app:fontFamily="@font/pretendard_semibold"
                android:background="@drawable/bg_button_neon"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:backgroundTint="@null" />

            <!-- 구분선 -->
            <View
                android:id="@+id/divider_settings"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/gray_800"
                android:layout_marginTop="32dp" />

            <!-- 설정 메뉴들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 이용약관 -->
                <LinearLayout
                    android:id="@+id/btn_terms"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이용약관"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_500" />
                </LinearLayout>

                <!-- 개인정보 처리방침 -->
                <LinearLayout
                    android:id="@+id/btn_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개인정보 처리방침"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_500" />
                </LinearLayout>

                <!-- 오픈소스 라이센스 -->
                <LinearLayout
                    android:id="@+id/btn_open_source"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="오픈소스 라이센스"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/gray_500" />
                </LinearLayout>

                <!-- 앱 버전 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="앱 버전"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>

                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textColor="@color/gray_500"
                        android:paddingEnd="8dp"
                        android:textAppearance="@style/TextAppearance.App.Body2" />
                </LinearLayout>

                <!-- 문의방법 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="문의방법"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>

                    <TextView
                        android:id="@+id/tv_contact_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="stampy7373@gmail.com"
                        android:textColor="@color/gray_500"
                        android:paddingEnd="8dp"
                        android:textAppearance="@style/TextAppearance.App.Body2" />
                </LinearLayout>

                <!-- 로그아웃 (로그인 시만 표시) -->
                <LinearLayout
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="로그아웃"
                        android:textColor="@color/gray_300"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.App.Button2.Large"
                        app:fontFamily="@font/pretendard_semibold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>