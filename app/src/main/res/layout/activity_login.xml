<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- 닫기 버튼 (우측 상단) -->
    <FrameLayout
        android:id="@+id/btn_close_touch_area"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:contentDescription="닫기" />
    </FrameLayout>

    <!-- 로고 (스탬피 아이콘) -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_logo_white"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 메인 텍스트 -->
    <TextView
        android:id="@+id/tv_main_text"
        android:layout_width="233dp"
        android:layout_height="72dp"
        android:text="자랑하고 싶은 나의 하루,\n스탬피로 기록하세요!"
        android:textColor="@color/gray_50"
        android:textSize="24sp"
        android:fontFamily="@font/pretendard_semibold"
        app:fontFamily="@font/pretendard_semibold"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 카카오 로그인 버튼 -->
    <FrameLayout
        android:id="@+id/btn_kakao_login"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_kakao"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_main_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_kakao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오로 계속하기"
                android:textColor="@color/gray_primary"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_semibold"
                app:fontFamily="@font/pretendard_semibold"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </FrameLayout>

    <!-- 구글 로그인 버튼 -->
    <FrameLayout
        android:id="@+id/btn_google_login"
        android:layout_width="335dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_button_google"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_kakao_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google로 계속하기"
                android:textColor="@color/gray_primary"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_semibold"
                app:fontFamily="@font/pretendard_semibold"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </FrameLayout>

    <!-- 하단 안내 문구 (이용약관 밑줄 + 클릭 가능) -->
    <TextView
        android:id="@+id/tv_terms"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="로그인하시면 이용약관 및 동의에 자동으로 동의합니다"
        android:textColor="@color/gray_600"
        android:textSize="12sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_google_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>