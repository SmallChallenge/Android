<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@color/text_primary"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_semibold"
            app:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_700"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/divider_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:paddingBottom="32dp">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_my_profile" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/layout_nickname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="닉네임"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:fontFamily="@font/pretendard_semibold" />

                <TextView
                    android:id="@+id/tv_nickname_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:fontFamily="@font/pretendard_semibold" />

                <ImageView
                    android:id="@+id/iv_arrow_nickname"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/gray_500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/bg_login_promotion">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 사용 중인 기능"
                    android:textColor="@color/gray_300"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:fontFamily="@font/pretendard_semibold"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ 자동 백업 및 무제한 기록"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    app:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:id="@+id/tv_info_public_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ 자유로운 공개 여부 설정"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    app:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_warning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그인 전 기록은 백업·공개가 불가해요."
                        android:textColor="@color/gray_500"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_regular"
                        app:fontFamily="@font/pretendard_regular"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/gray_800"
                android:layout_marginTop="32dp" />

            <LinearLayout
                android:id="@+id/btn_withdraw"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="회원탈퇴"
                    android:textColor="@color/gray_300"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:fontFamily="@font/pretendard_semibold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>