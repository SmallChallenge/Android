<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 컨텐츠 영역 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="61dp" />

    <!-- 하단 네비게이션 바 컨테이너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <!-- 상단 구분선 (1dp, Gray 700) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_700" />

        <!-- 하단 네비게이션 바 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="#171717"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="3dp"
            android:paddingBottom="8dp"
            app:itemIconTint="@color/bottom_nav_color"
            app:itemTextColor="@color/bottom_nav_color"
            app:itemIconSize="24dp"
            app:itemTextAppearanceActive="@style/TextAppearance.App.BottomNav"
            app:itemTextAppearanceInactive="@style/TextAppearance.App.BottomNav"
            app:labelVisibilityMode="labeled"
            app:itemPaddingTop="6dp"
            app:itemPaddingBottom="0dp"
            app:itemRippleColor="@android:color/transparent"
            app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
            app:menu="@menu/bottom_nav_menu" />

    </LinearLayout>

    <!-- 플로팅 액션 버튼 (네비게이션 바 위에 20px 올라옴) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="11dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/neon_primary"
        app:tint="@color/gray_primary"
        app:fabCustomSize="70dp"
        app:maxImageSize="32dp"
        app:elevation="10dp"
        app:borderWidth="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.FAB.Round28" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>