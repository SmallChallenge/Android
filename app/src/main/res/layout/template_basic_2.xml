<?xml version="1.0" encoding="utf-8"?>
<!-- Basic 2 템플릿 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Stampic 아이콘 (우측 상단, 여백 16px) -->
    <ImageView
        android:id="@+id/iv_logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_logo_white_shadow"
        android:contentDescription="Stampic Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 날짜/시간 컨테이너 (좌측 하단, 여백 24px) -->
    <LinearLayout
        android:id="@+id/datetime_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:gravity="start"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 날짜 표시 -->
        <!-- 형식: YYYY년 MM월 DD일 (요일) -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/suit_heavy"
            app:fontFamily="@font/suit_heavy"
            android:textSize="24sp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:shadowColor="#73000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            tools:text="2026년 10월 15일 (수)" />

        <!-- 시간 표시 -->
        <!-- 형식: 오전/오후 HH:mm -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/suit_heavy"
            app:fontFamily="@font/suit_heavy"
            android:textSize="24sp"
            android:includeFontPadding="false"
            android:letterSpacing="-0.02"
            android:shadowColor="#73000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            tools:text="오전 11:50" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>