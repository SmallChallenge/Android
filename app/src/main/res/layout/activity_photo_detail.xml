<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- 상단바 -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar_with_back"
        android:layout_width="0dp"
        android:layout_height="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 점3개 아이콘 (터치 영역 44dp) -->
    <FrameLayout
        android:id="@+id/btn_more_touch_area"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_vertical"
            android:contentDescription="더보기" />
    </FrameLayout>

    <!-- 팝오버 메뉴 (초기에는 숨김) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/popover_menu"
        android:layout_width="180dp"
        android:layout_height="112dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_popover"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_more_touch_area"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 기록 수정 -->
        <LinearLayout
            android:id="@+id/menu_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기록 수정"
                android:textAppearance="@style/TextAppearance.App.Body2"
                android:textColor="@color/gray_300"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="53dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="수정"
                app:tint="@color/gray_300"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 기록 삭제 -->
        <LinearLayout
            android:id="@+id/menu_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기록 삭제"
                android:textAppearance="@style/TextAppearance.App.Body2"
                android:textColor="@color/gray_300"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="53dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="삭제"
                app:tint="@color/gray_300"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView (사진 + 하단 정보) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btn_more_touch_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- 사진 (1:1 정사각형) -->
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_photo_rounded"
                android:clipToOutline="true"
                android:contentDescription="사진"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1" />

            <!-- 카테고리 라벨 -->
            <TextView
                android:id="@+id/tv_category_label"
                android:layout_width="120dp"
                android:layout_height="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="카테고리"
                android:textSize="14sp"
                android:textColor="@color/gray_400"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toBottomOf="@id/iv_photo"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 카테고리 아이콘 + 이름 -->
            <LinearLayout
                android:id="@+id/category_container"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_category_label"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_category_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_category_study"
                    android:contentDescription="카테고리 아이콘" />

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="공부"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_50"
                    android:fontFamily="@font/pretendard_regular" />
            </LinearLayout>

            <!-- 공개 여부 라벨 -->
            <TextView
                android:id="@+id/tv_visibility_label"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:text="공개 여부"
                android:textSize="14sp"
                android:textColor="@color/gray_400"
                android:textStyle="bold"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toTopOf="@id/tv_category_label"
                app:layout_constraintStart_toEndOf="@id/tv_category_label" />

            <!-- 공개 여부 태그 -->
            <com.project.stampy.etc.TagView
                android:id="@+id/tag_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="비공개"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintTop_toBottomOf="@id/tv_visibility_label"
                app:layout_constraintStart_toStartOf="@id/tv_visibility_label" />

            <!-- 비로그인 경고 메시지 (게스트만 보임) -->
            <LinearLayout
                android:id="@+id/warning_container"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_tag_pressed"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/category_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    android:contentDescription="경고"
                    app:tint="@color/gray_500"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="로그인 전 게시물은 공개 범위를 수정할 수 없어요."
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"
                    android:fontFamily="@font/pretendard_regular" />
            </LinearLayout>

            <!-- 공유하기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:text="공유하기"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.App.Button.Large"
                android:textColor="@color/gray_300"
                android:background="@drawable/bg_button_share"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="@null"
                app:layout_constraintTop_toBottomOf="@id/warning_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 게스트가 아닌 경우 공유하기 버튼 위치 조정용 가이드라인 -->
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="category_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>