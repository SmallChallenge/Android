<?xml version="1.0" encoding="utf-8"?>
<!-- 디지털 시계 숫자 박스 배경 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow: X3 Y3 Blur10, #000000 40% -->
    <item
        android:left="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- 40% = 0x66 -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Main Box: #FFFFFF 20% with blur -->
    <item
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <!-- 20% = 0x33 -->
            <corners android:radius="8dp" />
            <!-- Inner shadow: X1 Y1 Blur1, #FFFFFF 25% -->
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" /> <!-- 25% = 0x40 -->
        </shape>
    </item>

</layer-list>